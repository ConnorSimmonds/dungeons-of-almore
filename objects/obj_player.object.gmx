            <string>//Movement - this should go into a script I guess
var vect_x, vect_y;
vect_x = lengthdir_x(32,target_dir);
vect_y = lengthdir_y(32,target_dir);

if(keyboard_check_pressed(vk_up)){
    if(!place_meeting(target_x+vect_x,target_y+vect_y,obj_wall)){
        target_x += vect_x;
        target_y += vect_y;
    }
} else if(keyboard_check_pressed(vk_down)){
    if(!place_meeting(target_x-vect_x,target_y-vect_y,obj_wall)){
        target_x -= vect_x;
        target_y -= vect_y;
    }
} else if(keyboard_check_pressed(vk_right)){
    target_dir -= 90;
} else if(keyboard_check_pressed(vk_left)){
    target_dir += 90;
}

x = lerp(x,target_x,0.2);
y = lerp(y,target_y,0.2);
dir = lerp(dir,target_dir,0.1);
</string>
